    <!-- Script para controle dos formul√°rios -->
    <script>
        // Aguarda o carregamento completo da p√°gina
        document.addEventListener('DOMContentLoaded', function() {
            // Elementos do DOM
            const selectCategoria = document.getElementById('categoria');
            const formPrato = document.getElementById('formPrato');
            const formBebida = document.getElementById('formBebida');
            const formVinho = document.getElementById('formVinho');
            
            // Esconde todos os formul√°rios inicialmente
            formPrato.style.display = 'none';
            formBebida.style.display = 'none';
            formVinho.style.display = 'none';
            
            // Fun√ß√£o para remover required de todos os campos
            function removerRequired() {
                // Pratos
                document.querySelectorAll('#formPrato input, #formPrato select').forEach(campo => {
                    campo.required = false;
                });
                
                // Bebidas
                document.querySelectorAll('#formBebida input, #formBebida select').forEach(campo => {
                    campo.required = false;
                });
                
                // Vinhos
                document.querySelectorAll('#formVinho input, #formVinho select').forEach(campo => {
                    campo.required = false;
                });
            }
            
            // Fun√ß√£o para adicionar required aos campos do formul√°rio ativo
            function adicionarRequired(formulario) {
                document.querySelectorAll(`#${formulario} input, #${formulario} select`).forEach(campo => {
                    campo.required = true;
                });
            }
            
            // Evento de mudan√ßa no select
            selectCategoria.addEventListener('change', function() {
                const categoria = this.value;
                
                // Esconde todos os formul√°rios
                formPrato.style.display = 'none';
                formBebida.style.display = 'none';
                formVinho.style.display = 'none';
                
                // Remove required de todos os campos
                removerRequired();
                
                // Mostra o formul√°rio correspondente e adiciona required
                if (categoria === 'prato') {
                    formPrato.style.display = 'block';
                    adicionarRequired('formPrato');
                } else if (categoria === 'bebida') {
                    formBebida.style.display = 'block';
                    adicionarRequired('formBebida');
                } else if (categoria === 'vinho') {
                    formVinho.style.display = 'block';
                    adicionarRequired('formVinho');
                }
            });
            
            // Funcionalidade do bot√£o de adicionar ingrediente
            const btnAdicionar = document.querySelector('.btn-adicionar-ingrediente');
            if (btnAdicionar) {
                btnAdicionar.addEventListener('click', function() {
                    const container = document.getElementById('container-ingredientes');
                    const linhaOriginal = document.querySelector('.linha-ingrediente');
                    
                    if (container && linhaOriginal) {
                        const novaLinha = linhaOriginal.cloneNode(true);
                        
                        // Limpa os valores dos inputs na nova linha
                        const inputs = novaLinha.querySelectorAll('input, select');
                        inputs.forEach(input => {
                            input.value = '';
                        });
                        
                        container.appendChild(novaLinha);
                    }
                });
            }  
        });
    </script>
